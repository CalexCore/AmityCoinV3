    "version": "0.2.0",
    "configurations": [
        {
            "name": "Wallet",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builder/build/dev/debug/bin/amity-wallet-cli",
            "args": [
                "--testnet",
            ],
            "stopAtEntry": false,
            
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                }
            ]
        },
        {
            "name": "Testnet",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builder/build/dev/debug/bin/amityd",
            "args": [
                "--testnet", "--create-genesis-tx"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}